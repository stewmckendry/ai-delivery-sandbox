{
  "openapi": "3.1.0",
  "info": {
    "title": "Concussion Recovery App â€“ GPT Tools",
    "version": "1.0.0",
    "description": "Tools for triage, symptom tracking, stage guidance, and export in a concussion recovery GPT."
  },
  "servers": [
    {
      "url": "https://fortunate-contentment-production.up.railway.app",
      "description": "Production server"
    }
  ],
  "security": [
    { "bearerAuth": [] }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {}  
  },
  "paths": { 
    "/get_triage_flow": {
      "get": {
        "operationId": "getTriageFlow",
        "summary": "Get all triage questions",
        "tags": ["Triage"],
        "x-gpt-action": {
          "name": "Fetch Full Triage Flow",
          "instructions": "Use this at the start of triage to load the full question map. GPT should walk the user through each question in order, using `qid` to track answers, 'prompt' for sample way to ask questions, and `mode` to determine whether to clarify or probe before moving on (at your discretion if answer is unclear). Optionally reference `context`, `intent`, and `example_user_answers` for phrasing. **Keep it conversational & empathetic, not clinical!**",
          "summary_keywords": ["triage", "map", "flow"]
        },
        "responses": {
          "200": {
            "description": "Returns all questions in triage map",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "flow": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string", "example": "q1" },
                          "prompt": { "type": "string", "example": "Who are you reporting this for?" },
                          "type": { "type": "string", "example": "text" },
                          "intent": { "type": "string", "example": "reporter_role" },
                          "mode": { "type": "string", "example": "clarify", "description": "Use 'probe' to follow up, 'clarify' to confirm answer" },
                          "mode_description": { "type": "string", "example": "ask for confirmation" },
                          "example_user_answers": {
                            "type": "array",
                            "items": { "type": "string" },
                            "example": ["my son", "a player", "I'm their coach"]
                          },
                          "context": { "type": "string", "example": "Initial Intake" },
                          "tool_tags": {
                            "type": "array",
                            "items": { "type": "string" },
                            "example": ["triage", "reporting"]
                          },
                          "symptom_links": {
                            "type": "array",
                            "items": { "type": "string" },
                            "example": ["headache", "dizziness"]
                          }
                        },
                        "required": ["id", "prompt"]
                      }
                    }
                  },
                  "required": ["flow"]
                }
              }
            }
          }
        }
      }
    },
    "/log_incident_detail": {
      "post": {
        "operationId": "logIncidentDetail",
        "summary": "Log structured triage outcome",
        "tags": ["Triage"],
        "x-gpt-action": {
          "name": "Log Incident Details",
          "instructions": "Call this only after collecting all triage answers. Use the `qa_log` field to send a list of {qid, answer} pairs. Do not send timestamp or raw answers fields. Use values gathered during the flow.",
          "summary_keywords": ["log", "incident", "triage"]
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "string",
                    "example": "user_abc123"
                  },
                  "incident_context": {
                    "type": "string",
                    "description": "What happened during the injury",
                    "example": "He got hit from behind and hit his head on the boards"
                  },
                  "sport_type": {
                    "type": "string",
                    "example": "hockey"
                  },
                  "age_group": {
                    "type": "string",
                    "example": "U9"
                  },
                  "team_id": {
                    "type": "string",
                    "example": "Ted Reeves Tornados"
                  },
                  "qa_log": {
                    "type": "array",
                    "description": "List of question-answer pairs from the triage",
                    "items": {
                      "type": "object",
                      "properties": {
                        "qid": {
                          "type": "string",
                          "example": "q1"
                        },
                        "answer": {
                          "type": "string",
                          "example": "my son"
                        }
                      },
                      "required": ["qid", "answer"]
                    },
                    "example": [
                      {"qid": "q1", "answer": "my son"},
                      {"qid": "q2", "answer": "hockey"},
                      {"qid": "q3", "answer": "U9"}
                    ]
                  }
                },
                "required": ["user_id", "incident_context", "qa_log"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Incident log accepted"
          }
        }
      }
    },
    "/assess_concussion": {
      "post": {
        "operationId": "assessConcussion",
        "summary": "Evaluate red flags and symptom severity",
        "tags": ["Assessment"],
        "x-gpt-action": {
          "name": "Assess Concussion Risk",
          "instructions": "Run after triage to detect red flags or concerning patterns.",
          "summary_keywords": ["concussion", "assessment", "red flags"]
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "answers": {
                    "type": "object",
                    "description": "Symptom ID to severity rating"
                  }
                }
              },
              "examples": {
                "basic": {
                  "summary": "Check symptoms after triage",
                  "value": {
                    "answers": {
                      "headache": 3,
                      "nausea": 2,
                      "seizure": 1
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns red flag status and high-risk count"
          }
        }
      }
    },
    "/log_symptoms": {
      "post": {
        "operationId": "logSymptoms",
        "summary": "Log symptom check-in",
        "tags": ["Symptoms"],
        "x-gpt-action": {
          "name": "Log Symptoms",
          "instructions": "Submit a symptom check-in with metadata.",
          "summary_keywords": ["symptom", "log", "check-in"]
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["user_id", "symptoms"],
                "properties": {
                  "user_id": { "type": "string" },
                  "injury_date": { "type": "string", "format": "date" },
                  "checkin_time": { "type": "string", "format": "date-time" },
                  "symptoms": { "type": "object" },
                  "metadata": { "type": "object" }
                }
              },
              "examples": {
                "checkin": {
                  "summary": "User symptom report",
                  "value": {
                    "user_id": "abc123",
                    "injury_date": "2024-01-01",
                    "checkin_time": "2024-01-10T12:00:00Z",
                    "symptoms": { "headache": 2, "fatigue": 3 }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Logs saved successfully"
          }
        }
      }
    },
    "/get_stage_guidance": {
      "post": {
        "operationId": "getStageGuidance",
        "summary": "Infer recovery stage",
        "tags": ["Assessment"],
        "x-gpt-action": {
          "name": "Get Stage Guidance",
          "instructions": "Use after symptom check-in to infer current recovery stage.",
          "summary_keywords": ["stage", "guidance", "inference"]
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tracker_state": { "type": "object" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns current recovery stage"
          }
        }
      }
    },
    "/export_summary": {
      "post": {
        "operationId": "exportSummary",
        "summary": "Export summary as PDF + FHIR",
        "tags": ["Export"],
        "x-gpt-action": {
          "name": "Export Summary",
          "instructions": "Generate a PDF and FHIR summary for a user.",
          "summary_keywords": ["export", "summary", "PDF"]
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["user_id"],
                "properties": {
                  "user_id": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "PDF URL and FHIR bundle"
          }
        }
      }
    },
    "/export_to_sql": {
      "post": {
        "operationId": "exportToSql",
        "summary": "Export data to SQL",
        "tags": ["Export"],
        "x-gpt-action": {
          "name": "Export to SQL",
          "instructions": "Push all tracker and symptom logs to analytics DB.",
          "summary_keywords": ["export", "SQL", "dashboard"]
        },
        "responses": {
          "200": {
            "description": "Export triggered"
          }
        }
      }
    },
    "/get_symptom_log_map": {
      "get": {
        "summary": "get_symptom_log_map",
        "operationId": "get_symptom_log_map_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    },
    "/get_linked_symptoms/{user_id}": {
      "get": {
        "summary": "get_linked_symptoms",
        "operationId": "get_linked_symptoms_user_id_get",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "title": "User Id",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  }
}